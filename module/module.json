{
    "name": "OpenPose",
    "type": "OSC",
    "path": "Open Pose",
    "version": "1.0.0",
    "description": "Get tracking data from OpenPose",
    "hasInput": true,
    "hasOutput": true,
    "url": "https://github.com/PierreLemmel/chataigne-openpose",
    "downloadURL": "https://github.com/PierreLemmel/chataigne-openpose/releases/download/Server/chataigne-openpose-server.zip",

    "hideDefaultParameters": [
        "autoRange",
        "autoFeedback",
        "useHierarchy",
        "colorSendMode",
        "booleanSendMode",
        "clearValues",
        "pass_through"
    ],
    "defaults": {
        "OSC Input": {
			"localPort": 12000
		},
		"OSC Outputs": {
			"OSC Output": {
				"Remote port": 12001
			}
		}
    },
    "hideDefaultCommands": true,

    "scripts": [
        "openpose.js"
    ],

    "parameters": {
        "Open Pose Running": {
            "type": "Boolean",
            "readOnly": true,
            "default": false
        },
        "Start Open Pose": {
            "type": "Trigger"
        },
        "Stop Open Pose": {
            "type": "Trigger"
        },
        
        "Open Pose": {
            "type": "Container",
            
            "Launch Script": {
                "type": "File",
                "default": "",
                "description": "Path to the OpenPose launch script (launch.bat)"
            },

            "Preview": {
                "type": "Boolean",
                "default": true,
                "description": "Show the OpenPose preview window"
            },

            "Threshold": {
                "type": "Float",
                "default": 0.2,
                "description": "Threshold for the OpenPose tracking. A smaller value will track more points but errors are more likely to occur.",
                "min": 0,
                "max": 1
            }
        }
    },

    "values": {

        "Person 1": {
            "type": "Container",
            
            "Nose tracked": {
                "type": "Boolean",
                "readOnly": true,
                "default": false
            },
            "Nose position": {
                "type": "Point2D",
                "readOnly": true,
                "min": [0, 0],
                "max": [1, 1],
